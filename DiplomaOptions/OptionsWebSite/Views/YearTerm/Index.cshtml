@model IEnumerable<DiplomaDataModel.OptionPicker.YearTerm>

@{
    ViewBag.Title = "Year Term";
}

<h2>Year Term</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Term)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isDefault)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @switch (item.Term)
            {
                case 10:
                    @("Winter");
                    break;
                case 20:
                    @("Spring/Summer");
                    break;
                case 30:
                    @("Fall");
                    break;
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isDefault)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.YearTermId }) |
            @Html.ActionLink("Details", "Details", new { id=item.YearTermId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.YearTermId })
        </td>
    </tr>
}

</table>
